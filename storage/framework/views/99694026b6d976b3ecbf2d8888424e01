<h2>Consultar Credencial</h2>
<div>
    <div class="row">
        <div class="col-md-10">
            <div class="form-group">
                <div class="input-group ">
                    <div class="input-group-addon"><i class="fa fa-search"></i></div>
                    <input type="text" class="form-control" placeholder="Consultar Credencial" ng-model="searchCredencial" />
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <a class="btn btn-primary" ng-href="/#/credencial/create"><i class="fa fa-plus-circle"></i> Criar Credencial</a>
        </div>
    </div>

    <table class="table table-striped credenciais">
        <thead>
            <th>Nome</th>
            <th>E-mail</th>
            <th>Ações</th>
        </thead>
        <tbody>
            <tr ng-repeat="credencial in credenciais | orderBy: 'ds_nome' | filter:{ds_nome : searchCredencial, st_deletado : 'N'}" ng-class="{ 'success': credencial.st_ativo == 'A' }">
                <td><span tooltip="{{credencial.nm_usuario}}">{{credencial.ds_nome}}</span></td>
                <td>{{credencial.ds_email}}</td>
                <td>
                    <ul class="list-inline actions">
                    <li ><button class="btn btn-xs" ng-click="credencial.st_ativo != 'A' && activate(credencial)"><i class="fa" ng-class="credencial.st_ativo == 'A' ? 'fa-check-circle' : 'fa-check-circle-o'"></i></button></li>
                        <li><button class="btn btn-xs" ng-click="edit(credencial)"><i class="fa fa-pencil-square-o"></i></button></li>
                        <li><button class="btn btn-xs" ng-click="delete(credencial)"><i class="fa fa-times-circle"></i></button></li>
                    </ul>
                </td>
            </tr>
        </tbody>
        <tfoot>
            <th>Nome</th>
            <th>E-mail</th>
            <th>Ações</th>
        </tfoot>
    </table>

    <div></div>
</div>
